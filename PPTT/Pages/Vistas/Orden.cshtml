                "ANULAR LÍNEA DE TENSIÓN.", "RELEVAMIENTO U OTROS"
            ],
            "herreria": [
                "SOLDADURA EN GENERAL", "RELEVAMIENTO U OTROS"
            ],
            "carpinteria": [
                "ARREGLO DE MUEBLE", "ARREGLO DE ANTEPECHO", "MODIFICACIÓN DE PUERTA", "RELEVAMIENTO U OTROS"
            ],
            "tabiqueria": [
                "MODIFICACIÓN DE OFICINA (TRASLADO DE TABIQUE)", "INSTALACIÓN DE TABIQUE NUEVO",
                "REPARACIÓN DE TECHO", "RELEVAMIENTO U OTROS"
            ],
            "durlock": [
                "REPARACION", "INSTALACION", "RELEVAMIENTO U OTROS"
            ]
        };
        var opcionesSeleccionadas = opciones[primerSelect] || [];
        for (var i = 0; i < opcionesSeleccionadas.length; i++) {
            var optio = document.createElement('option');
            optio.value = opcionesSeleccionadas[i];
            optio.innerHTML = opcionesSeleccionadas[i];
            segundoSelect.appendChild(optio);
        }
    }

    function handleSubmit() {
        window.history.back();
        return true;
    }
</script>

<body>
    <form method="post" onsubmit="return handleSubmit()">
        <fieldset>
            <legend>Orden de Trabajo</legend>
            <div>
                <label for="Apellido">Apellido:</label>
                <input type="text" id="Apellido" name="Apellido" value="" required />
            </div>
            <div>
                <label for="Nombre">Nombre:</label>
                <input type="text" id="Nombre" name="Nombre" value="" required />
            </div>
            <div>
                <label for="Correo">Correo Institucional:</label>
                <input type="text" id="Correo" name="Correo" value="" required />
            </div>
            <div>
                <label for="Numero de Control">Numero de Control:</label>
                <input type="text" id="Numero de Control" name="NumeroDeControl" value="" required />
            </div>
            <h4>Grado:</h4>
            <select id="Grado" name="Grado" required>
                <option value="Civil">Civil</option>
                <option value="Soldado">Soldado</option>
                <option value="Brigadier">Brigadier</option>
            </select>
            <h4>Organismo:</h4>
            <select id="Organismo" name="Organismo" required>
                <option value="Civil">Civil</option>
                <option value="Soldado">Soldado</option>
                <option value="Brigadier">Brigadier</option>
            </select>
            <h4>Dependencia Interna:</h4>
            <select id="Dependencia Interna" name="DependenciaInterna" required>
                <option value="Civil">Civil</option>
                <option value="Soldado">Soldado</option>
                <option value="Brigadier">Brigadier</option>
            </select>
            <div>
                <label for="RTI">RTI:</label>
                <input type="text" id="RTI" name="RTI" value="" required />
            </div>
            <div>
                <label for="Numero de tu Oficina">Numero de tu Oficina:</label>
                <input type="text" id="Numero de Oficina" name="NumeroDeOficina" value="" required />
            </div>
            <h4>Color de tu Oficina:</h4>
            <select id="Color de Oficina" name="ColorDeTuOficina" required>
                <option value="Civil">Civil</option>
                <option value="Soldado">Soldado</option>
                <option value="Brigadier">Brigadier</option>
            </select>
        </fieldset>
        <button class="submit" type="submit">Enviar</button>
    </form>
</body>
