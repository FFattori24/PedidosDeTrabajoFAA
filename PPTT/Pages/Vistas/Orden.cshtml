@page
@model PPTT.Pages.Vistas.OrdenModel
@{
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
        color: #003d6b;
        margin: 0;
        padding: 0;
    }

    form {
        width: 60%;
        margin: 30px auto;
        padding: 20px;
        background-color: #e0e8f1;
        border: 1px solid #003d6b;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 61, 107, 0.2);
    }

    fieldset {
        border: none;
        padding: 0;
        margin: 0;
    }

    legend {
        font-size: 1.2em;
        color: #003d6b;
        margin-bottom: 10px;
        font-weight: bold;
    }

    label,
    input[type="text"],
    select,
    .submit,
    h4 {
        font-size: 1em;
        font-weight: bold;
    }

    input[type="text"],
    select {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #003d6b;
        border-radius: 4px;
        background-color: white;
    }

    h4, label {
        margin-bottom: 5px; /* Ajuste de margen inferior para consistencia */
    }

    .submit {
        background-color: #003d6b;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .submit:hover {
            background-color: #002e5d;
        }

    h4 {
        color: #003d6b;
        margin-top: 20px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .custom-textarea {
        width: 100%;
        height: 150px;
        resize: none;
    }
</style>

<script>
    function actualizarOpciones() {
        var primerSelect = document.getElementById("primerSelect").value;
        var segundoSelect = document.getElementById("segundoSelect");
        segundoSelect.innerHTML = "";
        var opciones = {
            "telefonia": [
                "SIN TONO", "RUIDO EN LINEA", "TRASLADO DE LINEA", "LINEA NUEVA", "CAMBIO DE TIPO DE DISCADO, SÓLO RTI", "CAMBIO DE TIPO DE DISCADO, DISCADO DIRECTO NACIONAL C/CELULAR",
                "CAMBIO DE TIPO DE DISCADO, DISCADO DIRECTO INTERNACIONAL C/CELULAR", "CAMBIO DE APARATO", "CONFIGURACIONES ESPECIALES",
                "RELEVAMIENTO U OTROS"
            ],
            "cerrajeria": [
                "PUERTA TRABADA", "CERRADURA TRABADA", "CAMBIO DE PICAPORTE",
                "CAMBIO DE BISAGRA", "RELEVAMIENTO U OTROS"
            ],
            "plomeria": [
                "DESAGUE TAPADO", "BAÑO TAPADO", "CAMBIO DE TERMOTANQUE",
                "INSTALACION DE TERMOTANQUE", "CAMBIO DE GRIFERIA", "CAMBIO DE INODORO",
                "ARREGLO DE VALVULA DIOGENES", "PULSADORES DE MINGITORIO", "TRABAJOS DE CLOACAS",
                "MODIFICACION DE CAÑERIAS DE BAÑOS Y COCINA", "RELEVAMIENTO U OTROS"
            ],
            "pintura": [
                "BARNIZADO", "PINTURA GENERAL", "COLOCACION DE ENDUIDO", "RELEVAMIENTO U OTROS"
            ],
            "albanileria": [
                "REPARACION DE INFRAESTRUCTURA", "REVOQUE", "REMOCION DE PISO",
                "COLOCACION DE PISO", "RELEVAMIENTO U OTROS"
            ],
            "electricidad": [
